<view class='date-item' wx:for="{{futureWeather}}" wx:key="{{item.id}}">
  <view class="date-wrapper">
    <view class="day">{{item.week}}</view>
    <view class="date">{{item.date}}</view>
  </view>
  <view class="temp">{{item.minTemp}}°-{{item.maxTemp}}°</view>
  <image class="weather-icon" src="{{item.weatherIcon}}"></image>
</view>