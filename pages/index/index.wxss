/**index.wxss**/

.weather-wrapper {
  width: 750rpx;
  height: 100%;
  position: relative;
}

.temperature {
  font-size: 200rpx;
  line-height: 280rpx;
  text-align: center;
  opacity: 0.8;
}

.weather {
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  margin-bottom: 100rpx;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 100%;
  z-index: -1;
}

.today-temp {
  margin: 0 20rpx;
  padding: 10rpx 0;
  border-top: 1px solid rgba(182, 176, 176, 0.8);
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8;
}

.arrow-icon {
  width: 23rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.location-wrapper {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8;
  height: 200rpx;
  background-color: rgba(0, 0, 0, 0);
}

.location-wrapper::after {
  border: none;
}

.location {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}

.location-icon {
  height: 30rpx;
  width: 21rpx;
  margin-right: 15rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}
